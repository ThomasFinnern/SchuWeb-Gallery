<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field name="id" type="text" default="0"
               readonly="true" class="readonly"
               label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC"/>
        <field name="name" type="text" default="" label="SCHUWEB_GALLERY_VIDEO_NAME" required="true"/>
        <field name="video_id" type="text" default="0" label="SCHUWEB_GALLERY_VIDEOID" required="true"/>
        <field name="video_service" type="list" label="SCHUWEB_GALLERY_VIDEO_SERVICE"
               class="inputbox"
               size="1" default="SCHUWEB_GALLERY_VIMEO"
                >
            <option value="SCHUWEB_GALLERY_VIMEO">
                SCHUWEB_GALLERY_VIMEO
            </option>
            <option value="SCHUWEB_GALLERY_YOUTUBE">
                SCHUWEB_GALLERY_YOUTUBE
            </option>
        </field>
        <field name="tags" type="tag" label="JTAG" description="JTAG_DESC" class="inputbox span12 small"
               multiple="true"/>
        <field name="state" type="list"
               label="JSTATUS"
               class="inputbox span12 small" size="1" default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

    </fieldset>
    <fieldset name="publish"
              label="SCHUWEB_GALLERY_GROUP_LABEL_PUBLISHING_DETAILS"
            >

        <field name="created" type="calendar"
               label="SCHUWEB_GALLERY_FIELD_CREATED_LABEL"
               class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S"
               filter="user_utc"/>
        <field name="created_by" type="user"
               label="SCHUWEB_GALLERY_FIELD_CREATED_BY_LABEL"/>

        <field name="created_by_alias" type="text"
               label="SCHUWEB_GALLERY_FIELD_CREATED_BY_ALIAS_LABEL"
               class="inputbox" size="20"/>

        <field name="modified" type="calendar" class="readonly"
               label="JGLOBAL_FIELD_MODIFIED_LABEL"
               size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc"/>

        <field name="modified_by" type="user"
               label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
               class="readonly"
               readonly="true"
               filter="unset"
                />
        <field name="version" type="text" class="readonly"
               label="SCHUWEB_GALLERY_FIELD_VERSION_LABEL" size="6"
               readonly="true" filter="unset"/>

        <field name="publish_up" type="calendar"
               label="SCHUWEB_GALLERY_FIELD_PUBLISH_UP_LABEL"
               class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
               filter="user_utc"/>

        <field name="publish_down" type="calendar"
               label="SCHUWEB_GALLERY_FIELD_PUBLISH_DOWN_LABEL"
               class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
               filter="user_utc"/>
    </fieldset>

</form>