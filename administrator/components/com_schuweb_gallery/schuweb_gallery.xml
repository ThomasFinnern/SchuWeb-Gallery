<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.1" method="upgrade">
    <name>com_schuweb_gallery</name>
    <author>Schultschik Websolution</author>
    <creationDate>sw.build.date</creationDate>
    <copyright>Copyright (C) 2012 Schultschik Websolution, Sven Schultschik. All rights reserved.	</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>info@schultschik.de</authorEmail>
    <authorUrl>extensions.schultschik.de</authorUrl>
    <version>sw.build.version</version>
    <description><![CDATA[COM_SCHUWEB_GALLERY_XML_DESCRIPTION]]></description>

    <files folder="site">
        <folder>views</folder>
        <folder>models</folder>
        <filename>controller.php</filename>
        <filename>index.html</filename>
        <filename>metadata.xml</filename>
        <filename>router.php</filename>
        <filename>schuweb_gallery.php</filename>
    </files>
    <media destination="com_schuweb_gallery" folder="media">
        <folder>css</folder>
        <folder>images</folder>
        <folder>js</folder>
    </media>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">install.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">uninstall.sql</file>
        </sql>
    </uninstall>
    <scriptfile>installer.php</scriptfile>
    <administration>
        <menu link="option=com_schuweb_gallery" img="class:schuweb_gallery">SchuWeb Gallery</menu>

        <files folder="admin">
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>install.sql</filename>
            <filename>installer.php</filename>
            <filename>schuweb_gallery.php</filename>
            <filename>uninstall.sql</filename>
        </files>
        <languages folder="admin">
            <language tag="en-GB">language/en-GB/en-GB.com_schuweb_gallery.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.com_schuweb_gallery.sys.ini</language>
        </languages>
    </administration>
</extension>
